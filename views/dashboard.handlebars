{{!-- dashboard page showing us goals, progress, and priority tasks--}}

{{!-- Nicole: header --}}
<div class="header">
  <a href="dashboard.handlebars">
    <img id="logo" src="#" alt="logo">
  </a>
  <h1>ACCOUNTABILIBUDDY</h1>
</div>

{{!-- priority tasks (top 5 due soon) me --}}

<div id="priorityTasks">

  <ul>
    {{#each tasks}}
    <li>
      <p>Priority Task: {{task}}</p>
    </li>
    {{/each}}
  </ul>

</div>

{{!-- Nicole: add goal form --}}
<div class="add-goal">

  <h2>Add a Goal</h2>
  <form action="/api/goal" method="POST">
    <textarea type="text" name="description"></textarea>
    <button type="submit">Add Goal!</button>
  </form>

</div>

{{!-- current goals as loader bar me --}}
<div id="myProgress">

  <ul>
    {{#each goals}}
    <li>
      <p id="myBar"><a href="tasks.handlebars">Goal: {{goal}}</a></p>
    </li>
    {{/each}}
  </ul>

</div>

